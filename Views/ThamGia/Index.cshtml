@model IEnumerable<Bidc_Union_Management.Controllers.ChiTietThamGia>

@using Bidc_Union_Management.Constant

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i>Home</a>
            </li>
            <li class="active-bre"><a href="#">Tham gia</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4>Danh sách hoạt động</h4>
                    </div>
                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            @functions
                                        {
                                public string GenerateLinks(dynamic item)
                                {
                                    string result = string.Empty;
                                    MembershipUser user = Membership.GetUser();
                                    string[] roles = Roles.GetRolesForUser(User.Identity.Name);
                                    result += Html.ActionLink("Chi tiết ", "Details", "ThamGia",
                                                               new
                                                               {
                                                                   id = item.Id
                                                               },
                                                               new { @title = "Chi Tiết" }
                                                               ).ToString();
                                    result += Html.ActionLink("Sửa ", "Edit", "ThamGia",
                                                            new
                                                            {
                                                                id = item.Id
                                                            },
                                                            new { @title = "chỉnh sửa" }
                                                            ).ToString();
                                    result += Html.ActionLink("Xóa ", "Delete", "ThamGia",
                                                            new
                                                            {
                                                                id = item.Id
                                                            },
                                                            new { @title = "Xóa" }
                                                            ).ToString();
                                    return result;
                                }

                                }

                            @{ var grid = new WebGrid(Model, rowsPerPage: 10, fieldNamePrefix: "sortSBs", pageFieldName: "pageSBs");
                                @grid.GetHtml(
                                        tableStyle: "webgrid table table-hover",
                                        headerStyle: "webgrid-header",
                                        footerStyle: "webgrid-footer",
                                        alternatingRowStyle: "webgrid-alternating-row",
                                        selectedRowStyle: "webgrid-selected-row",
                                        rowStyle: "webgrid-row-style",
                                        mode: WebGridPagerModes.All,
                                            firstText: "<<",
                                            lastText: ">>",
                                        columns: grid.Columns(
                                                        grid.Column(columnName: "Name", header: "Tên"),
                                                        grid.Column(columnName: "SL", header: "Số lượng"),
                                                        grid.Column(columnName: "CreateDate", header: "Ngày Tạo"),
                                                        grid.Column(columnName: null, header: "Lựa Chọn",
                                                        format: (item) => new HtmlString(@GenerateLinks(item))
                                                    )
                                                    )
                                                )

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
