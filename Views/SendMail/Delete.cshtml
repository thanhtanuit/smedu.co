@model Bidc_Union_Management.Models.SendMail

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li><a href="#"><i class="fa fa-home" aria-hidden="true"></i>Gửi mail</a>
            </li>
            <li class="active-bre"><a href="#">Xóa</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4>Xóa gửi mail</h4>
                    </div>
                    <div class="tab-inn">
                        <div class="row">
                            <div class="input-field col s12">
                                <div class="col-md-10">
                                    <strong>Tiêu đề:</strong><br />
                                    @Model.Subject
                                </div>
                            </div>
                            <div class="input-field col s12">
                                <div class="col-md-10">
                                    <strong>Nội dung:</strong><br />
                                    @Model.Subject
                                </div>
                            </div>
                            <div class="input-field col s12">
                                <div class="col-md-10">
                                    <strong>File đính kèm:</strong><br />
                                    @if (Model.Attactment != "" & Model.Attactment != null)
                                    {
                                        <a href="/FileUpload/CongVan/@Model.Attactment" target="_blank">Chi tiết </a>    
                                    }
                                </div>
                            </div>
                            <div class="input-field col s12">
                                <div class="col-md-10">
                                    <strong>Ngày tạo:</strong><br />
                                    @Model.CreateDate
                                </div>
                            </div>
                            <div class="input-field col s12">
                                <div class="col-md-10">
                                    <strong>Danh sách mail gửi:</strong><br />
                                    @Model.ListUserName
                                </div>
                            </div>

                            @using (Html.BeginForm("Delete", "SendMail", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()             
                                @Html.ValidationSummary()

                                <div class="input-field col s12">
                                    <div class="col-md-10">
                                        <input type="submit" value="Xóa" class="btn-large" />
                                        |
                                            <a href="Javascript:void(0)" class="btn-large" onclick="window.history.back()">Trở lại</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

