@model IEnumerable<Bidc_Union_Management.Models.SendMail>

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i>Home</a>
            </li>
            <li class="active-bre"><a href="#">Gửi mail</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4>Danh sách</h4>
                    </div>
                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            @functions
                                        {
                                public string GenerateLinks(dynamic item)
                                {
                                    string result = string.Empty;
                                    result += Html.ActionLink("Chi tiết ", "Details", "SendMail",
                                                               new
                                                               {
                                                                   id = item.Id
                                                               },
                                                               new { @title = "Chi Tiết" }
                                                               ).ToString();
                                    if (Roles.IsUserInRole("Inputter"))
                                    {
                                      
                                        result += Html.ActionLink("Xóa ", "Delete", "SendMail",
                                                                new
                                                                {
                                                                    id = item.Id
                                                                },
                                                                new { @title = "Xóa" }
                                                                ).ToString();
                                    }

                                    if (Roles.IsUserInRole("Authoriser"))
                                    {
                                        if (item.Status==1)
                                        {
                                            result += Html.ActionLink("Duyệt ", "Authorise", "SendMail",
                                                   new
                                                   {
                                                       id = item.Id
                                                   },
                                                   new { @title = "Duyệt" }
                                                   ).ToString();
                                        }

                                        result += Html.ActionLink("Xóa ", "Delete", "SendMail",
                                                                new
                                                                {
                                                                    id = item.Id
                                                                },
                                                                new { @title = "Xóa" }
                                                                ).ToString();
                                    }
                                    return result;
                                }
                                }

                            @{ var grid = new WebGrid(Model, rowsPerPage: 10, fieldNamePrefix: "sortSBs", pageFieldName: "pageSBs");
                                @grid.GetHtml(
                                        tableStyle: "webgrid table table-hover",
                                        headerStyle: "webgrid-header",
                                        footerStyle: "webgrid-footer",
                                        alternatingRowStyle: "webgrid-alternating-row",
                                        selectedRowStyle: "webgrid-selected-row",
                                        rowStyle: "webgrid-row-style",
                                        mode: WebGridPagerModes.All,
                                            firstText: "<<",
                                            lastText: ">>",
                                        columns: grid.Columns(
                                                        grid.Column(columnName: "Subject", header: "Tiều đề"),                                                        
                                                        grid.Column("Trạng thái",format: (item) =>
                                                        {
                                                            if (item.Status == 1)
                                                            {
                                                                return Html.Raw("Chưa duyệt");
                                                            }
                                                            else if (item.Status == 2)
                                                            {
                                                                return Html.Raw("Đã duyệt");
                                                            }
                                                            else
                                                            {
                                                                return Html.Raw("Chờ duyệt xóa");
                                                            }
                                                        }, style: "firstColumn",canSort:true), 
                                                        grid.Column(
                                                            "CreateDate", 
                                                            "Ngày Tạo",
                                                            format: (item) => string.Format("{0:dd/MM/yyyy}", item.CreateDate)
                                                        ),
                                                        grid.Column(columnName: null, header: "Lựa Chọn",
                                                        format: (item) => new HtmlString(@GenerateLinks(item))
                                                    )
                                                    )
                                      )
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>