@using PagedList.Mvc ;
@model  PagedList.IPagedList<Bidc_Union_Management.Models.HoatDong>  
@{
    ViewBag.Title = "ListHoatDong";    
}

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i>Trang chủ</a>
            </li>
            <li class="active-bre"><a href="Javascript:void(0)">Hoạt động</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title" style="margin-bottom: 10px;">
                        <h4>Hoạt động</h4>
                    </div>
                    <div style="margin: 5px;margin-left:25px;">
                        @foreach (var item in Model)
                        {
                            <div class="row" style="margin-top:10px;">
                                <div class="col-sm-2">
                                    <a href="/HoatDong/Details/@item.Id"><img class="card-img-top" height="90" width="166" src="/FileUpload/@item.Images"></a>
                                </div>
                                <div class="col-sm-10">
                                    <h5><a href="/HoatDong/Details/@item.Id">@item.Name</a></h5>
                                    @item.Description
                                </div>
                            </div>
                        }

                    </div>
                    <div id="container" style="margin-left: 20px">    
                    <p></p>    
                    <p></p>    
                    <div class="pagination" style="margin-left: 400px">    
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)    
                        / @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ListHoatDong", new { page }))    
                    </div>                        
                </div> 
                </div>
            </div>
        </div>
    </div>
</div>
