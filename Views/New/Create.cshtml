@model Bidc_Union_Management.Models.New

@{
    ViewBag.Title = "Create";
}

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i>Home</a>
            </li>
            <li class="active-bre"><a href="#">Tin tức</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4>Thêm mới tin tức</h4>
                    </div>
                    <div class="tab-inn">
                        @using (Html.BeginForm("Create", "New", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="row">                               
                                    <div class="input-field col s12">
                                        <div class="col-md-10">                                            
                                            <strong>Tên:<br/></strong>
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "validate" } })                                        
                                        </div>
                                    </div>
                                    <div class="input-field col s12">                                        
                                        <div class="col-md-10">
                                            <strong>Mô Tả:<br /></strong>
                                            @Html.TextAreaFor(model => model.Description)
                                            @Html.ValidationMessageFor(model => model.Description)
                                        </div>
                                    </div>
                                   
                                    <div class="input-field col s12">                                        
                                        <div class="input-field col s12">
                                            <strong>Nội Dung:<br /></strong>
                                            @Html.TextAreaFor(model => model.ContentNew, new { @id = "ckeContent" })
                                            @Html.ValidationMessageFor(model => model.ContentNew)
                                            <script type="text/javascript">
                                                CKEDITOR.replace("ckeContent");
                                            </script>
                                        </div>
                                    </div>

                                    <div class="input-field col s12" style="clear:both;padding-top:10px;">
                                        <p style="padding-left:20px;">Chọn hình</p>
                                        <div class="col-sm-9">
                                            <input type="file" name="images" id="images" />
                                        </div>
                                    </div>
                                <div class="input-field col s12">
                                        <div class="input-field col s12">
                                            <input type="submit" class="waves-effect waves-light btn-large" value="Lưu" />
                                        </div>
                                    </div>
                                </div>                              
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
