@model Bidc_Union_Management.Models.PhanDoan

@{
    ViewBag.Title = "Delete";
}

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li><a href="#"><i class="fa fa-home" aria-hidden="true"></i>Phân đoàn</a>
            </li>
            <li class="active-bre"><a href="#">Xóa</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4>Xóa phân đoàn</h4>
                    </div>
                    <div class="tab-inn">                        
                            <div class="row">
                                <div class="input-field col s12">
                                    <div class="col-md-10">
                                        <strong>Tên:</strong><br />
                                        @Model.Name
                                    </div>
                                </div>
                                <div class="input-field col s12">
                                    <div class="col-md-10">
                                        <strong>Ngày tạo:</strong><br />
                                        @string.Format("{0:dd-MM-yyyy}", Model.CreateDate)                                        
                                    </div>
                                </div>
                                <div class="input-field col s12">
                                    <div class="col-md-10">
                                        <strong>Chi đoàn:</strong><br />
                                        @ViewBag.chidoan                               
                                    </div>
                                </div>
                                @using (Html.BeginForm("Delete", "PhanDoan", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()             
                                    @Html.ValidationSummary()

                                    <div class="input-field col s12">
                                        <div class="col-md-10">
                                            <input type="submit" value="Xóa" class="btn-large" />
                                            |
                                            <a href="Javascript:void(0)" class="btn-large" onclick="window.history.back()">Trở lại</a>
                                        </div>
                                    </div>
                                }
                            </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
