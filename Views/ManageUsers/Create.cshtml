@model Bidc_Union_Management.Models.RolesDV

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i>Home</a>
            </li>
            <li class="active-bre"><a href="#">Gán quyền user</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4>Thêm mới quyền</h4>
                    </div>
                    <div class="tab-inn">
                        <div class="input-field col s12">
                            <div class="col-md-10">
                                <span style="color:red">@ViewBag.error</span>
                            </div>
                        </div>
                        @using (Html.BeginForm("Create", "ManageUsers", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="row">
                                <div class="input-field col s12">
                                    <div class="col-md-10">
                                        <strong>Tên đăng nhập:<br />
                                        </strong>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "validate" } })
                                    </div>
                                </div> 
                                <div class="input-field col s12">
                                    <div class="col-md-10">
                                        <strong>Quyền hạn:<br />
                                        </strong>
                                        @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "validate" } })
                                    </div>
                                </div>                          
                                                         
                                <div class="input-field col s12">
                                    <div class="col-md-10">
                                        <input type="submit" value="Lưu" class="btn-large" id="btsubmit" >                                         
                                    </div>
                                </div>
                            </div>                                      
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

